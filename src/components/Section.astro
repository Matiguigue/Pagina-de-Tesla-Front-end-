---
const { color, title, subtitle, subsubtitle, decoration, clarification } = Astro.props
const textColor = `text-${color}`
---

<section class="landing-section h-screen w-screen text-center overflow-hidden relative" data-header-color={color}>

    <div class="z-30 relative h-full flex flex-col">
        <header>
            <h2 class={`${textColor} pt-40 text-[40px] font-medium`}>{ title }</h2>
            <p class={`${textColor} text-[25px] font-medium`}> { subtitle }</p>
            <p class={`${textColor} text-[16px]`}> { subsubtitle }</p>
            <p class={`${textColor} text-[16px] underline`}> { decoration } </p>
        </header>

        <footer class="flex flex-col flex-grow justify-end pb-20">
            <div class="gap-x-6 flex mx-auto">
                <slot name="footer"/>
            </div>
        </footer>
    </div>
    
    <div class="absolute top-0 bottom-0 h-full z-10">
        <slot name="background" />
        <video 
            class="object-center object-cover" 
            autoplay muted loop 
            src="/video.mp4">
        </video>
    </div>
    
</section>